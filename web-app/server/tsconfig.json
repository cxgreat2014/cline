{
	"compilerOptions": {
		"target": "ES2022",
		"module": "commonjs",
		"lib": ["ES2022"],
		"outDir": "./dist",
		"rootDir": "./src",
		"strict": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"resolveJsonModule": true,
		"declaration": true,
		"declarationMap": true,
		"sourceMap": true,
		"experimentalDecorators": true,
		"emitDecoratorMetadata": true,
		"strictPropertyInitialization": false,
		"baseUrl": "./src",
		"paths": {
			"@/*": ["*"],
			"@core/*": ["core/*"],
			"@api/*": ["api/*"],
			"@services/*": ["services/*"],
			"@models/*": ["models/*"],
			"@middleware/*": ["middleware/*"],
			"@utils/*": ["utils/*"],
			"@shared/*": ["../shared/*"]
		}
	},
	"include": ["src/**/*", "../shared/**/*"],
	"exclude": ["node_modules", "dist", "**/*.test.ts", "**/*.spec.ts"]
}
